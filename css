}

/* Menu Mobile (Padrão) */
.main-nav {
    /* Esconde o menu por padrão no mobile */
    display: none; 
    width: 100%;
    position: absolute;
    top: 100%; /* Abaixo do header */
    left: 0;
    background-color: white;
    border-top: 1px solid var(--color-neutral-light);
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.main-nav.is-open {
    display: block; /* Mostra quando a classe 'is-open' é adicionada via JS */
}

.nav-list {
    list-style: none;
    padding: var(--space-2);
}

.nav-item a {
    display: block;
    padding: var(--space-2) 0;
    color: var(--color-neutral-dark);
}

.menu-toggler {
    /* Botão Hambúrguer */
    background: none;
    border: none;
    padding: var(--space-1);
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 24px;
}
.menu-toggler .icon-bar {
    width: 24px;
    height: 3px;
    background-color: var(--color-primary);
    transition: transform 0.3s, opacity 0.3s;
}

/* Menu Desktop */
@media (min-width: var(--breakpoint-md)) {
    .menu-toggler {
        display: none;
    }
    
