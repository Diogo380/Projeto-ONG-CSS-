/* ===================================================
   Estilização de Formulários (Feedback Visual)
   =================================================== */

.form {
    background-color: var(--color-neutral-light);
    padding: var(--space-4);
    border-radius: 8px;
}
.container-small {
    max-width: 600px;
}

.form-group {
    margin-bottom: var(--space-3);
}

.form-group-half {
    width: 100%; /* Mobile: full width */
}

@media (min-width: var(--breakpoint-sm)) {
    /* Organiza lado a lado */
    .form fieldset > .form-group-half:nth-child(even) {
        float: right;
        width: 48%;
    }
    .form fieldset > .form-group-half:nth-child(odd) {
        float: left;
        width: 48%;
    }
    .form fieldset {
        overflow: auto; /* Para limpar o float */
        margin-bottom: var(--space-4);
    }
}

.form label {
    display: block;
    margin-bottom: var(--space-1);
    font-weight: 600;
}

.form input:not([type="checkbox"]):not([type="radio"]), 
.form select, 
.form textarea {
    width: 100%;
    padding: var(--space-2);
    border: 1px solid #ced4da;
    border-radius: 4px;
    font-size: var(--font-size-base);
    transition: border-color 0.3s, box-shadow 0.3s;
}

.form input:focus, .form select:focus {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    outline: none;
}

/* Estilização para Validação (JS adiciona classes) */
.form-group.is-invalid input, 
.form-group.is-invalid select {
    border-color: #dc3545; /* Vermelho */
}

.form-group.is-valid input, 
.form-group.is-valid select {
    border-color: var(--color-secondary); /* Verde */
}

.feedback-message {
    display: block;
    font-size: var(--font-size-sm);
    margin-top: 4px;
    color: #dc3545;
}

