/* ===================================================
   Acessibilidade (Modo Alto Contraste)
   =================================================== */

body.high-contrast {
    background-color: var(--color-high-contrast-bg);
    color: var(--color-high-contrast-text);
}

body.high-contrast .header,
body.high-contrast .modal-content,
body.high-contrast .form {
    background-color: var(--color-high-contrast-bg);
    border: 3px solid var(--color-high-contrast-text);
}

body.high-contrast h1, 
body.high-contrast h2, 
body.high-contrast h3,
body.high-contrast a,
body.high-contrast .nav-item a,
body.high-contrast .card-title,
body.high-contrast .form label {
    color: var(--color-high-contrast-text);
}

body.high-contrast .btn-primary,
body.high-contrast .btn-secondary {
    background-color: var(--color-high-contrast-text);
    color: var(--color-high-contrast-bg);
    border-color: var(--color-high-contrast-text);
}
