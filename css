/* ===================================================
   Sistema de Design e Variáveis
   =================================================== */

:root {
    /* Paleta de Cores (8 cores min) */
    --color-primary: #007bff;        /* Azul principal */
    --color-primary-dark: #0056b3;
    --color-secondary: #28a745;      /* Verde (Sucesso, Ação) */
    --color-secondary-dark: #1e7e34;
    --color-tertiary: #ffc107;       /* Amarelo (Alerta) */
    --color-neutral-light: #f8f9fa;  /* Fundo claro */
    --color-neutral-dark: #343a40;   /* Texto e Fundo Escuro */
    --color-text-body: #495057;      /* Texto principal */
    
    /* Tipografia (5 tamanhos min) */
    --font-size-base: 16px;
    --font-size-sm: 0.875rem; /* 14px */
    --font-size-lg: 1.25rem;  /* 20px */
    --font-size-h1: 2.5rem;   /* 40px */
    --font-size-h2: 2rem;     /* 32px */
    --font-size-h3: 1.75rem;  /* 28px */
    
    /* Espaçamento Modular (8px base) */
    --space-1: 0.5rem;  /* 8px */
    --space-2: 1rem;    /* 16px */
    --space-3: 1.5rem;  /* 24px */
    --space-4: 2rem;    /* 32px */
    --space-5: 3rem;    /* 48px */
    --space-6: 4rem;    /* 64px */

    /* Breakpoints */
    --breakpoint-xs: 480px;
    --breakpoint-sm: 640px;
    --breakpoint-md: 768px;
    --breakpoint-lg: 1024px;
    --breakpoint-xl: 1280px;

    /* Acessibilidade (Alto Contraste) */
    --color-high-contrast-bg: #000000;
    --color-high-contrast-text: #ffffff;
}

/* Base e Reset Básico */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
    font-size: var(--font-size-base);
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    color: var(--color-text-body);
    background-color: #fff;
    /* Acessibilidade: Garante cores de fundo e texto padrão */
}

/* ===================================================
   Tipografia e Semântica
   =================================================== */

h1, h2, h3 {
    color: var(--color-neutral-dark);
    line-height: 1.2;
    margin-bottom: var(--space-2);
}

h1 { font-size: var(--font-size-h1); }
h2 { font-size: var(--font-size-h2); }
h3 { font-size: var(--font-size-h3); }

p {
    margin-bottom: var(--space-2);
}

a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.3s;
}

a:hover, a:focus {
    color: var(--color-primary-dark);
    outline-offset: 2px; /* Acessibilidade: Focus visual */
}

/* ===================================================
   Leiautes e Responsividade (Mobile First)
   =================================================== */

.container {
    max-width: var(--breakpoint-xl);
    width: 90%;
    margin: 0 auto;
    padding: var(--space-3) 0;
}

.section {
    padding: var(--space-5) 0;
}

.section-title {
    text-align: center;
    margin-bottom: var(--space-4);
}

/* GRID (Estrutura Principal) */
/* Grid de 12 colunas para desktop */
@media (min-width: var(--breakpoint-lg)) {
    .grid-12-cols {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: var(--space-3);
    }
}

/* Grid de 2 Colunas para Seções */
.grid-2-cols {
    display: grid;
    grid-template-columns: 1fr; /* Mobile: 1 coluna */
    gap: var(--space-4);
    align-items: center;
}
@media (min-width: var(--breakpoint-md)) {
    .grid-2-cols {
        grid-template-columns: repeat(2, 1fr);
    }
    /* Inverte a ordem para melhor leitura em algumas seções */
    .reverse-on-mobile {
        grid-template-areas: "col2 col1";
    }
    .reverse-on-mobile > :nth-child(1) { grid-area: col1; }
    .reverse-on-mobile > :nth-child(2) { grid-area: col2; }
}

/* Grid de 3 Colunas (Cards) */
.grid-3-cols, .grid-card-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-3);
}
@media (min-width: var(--breakpoint-sm)) {
    .grid-3-cols {
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }
}
@media (min-width: var(--breakpoint-md)) {
    .grid-card-layout {
        grid-template-columns: repeat(3, 1fr);
    }
}

